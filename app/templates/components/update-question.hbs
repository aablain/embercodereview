{{#if updateQuestionForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your Name:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="content">Your Question:</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="note">Title:</label>
        {{input value=note id="note" placeholder=question.note}}
      </div>
      <button {{action 'update' question}}>Submit</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
